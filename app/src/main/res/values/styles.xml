<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:windowBackground">@color/base_light</item>


        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/base_vivid</item>
        <item name="colorPrimaryDark">@color/base_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/base_light</item>
    </style>

    <style name="BottomNavigation">
        <item name="itemBackground">@color/base_vivid</item>
        <item name="itemIconTint">@color/tab_color</item>
        <item name="itemTextColor">@color/tab_color</item>
    </style>

</resources>
